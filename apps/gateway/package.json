{
  "name": "gateway",
  "version": "1.0.0",
  "description": "GraphQL Gateway",
  "main": "src/main.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "npm run codegen && tsc",
    "codegen": "graphql-codegen",
    "post-install": "npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json,graphql\" --exec \"npm run build && npm run start\" --ignore ./src/__generated__/ --ignore ./src/datasources/BarAPI.ts",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/gateway": "2.2.2",
    "@apollo/server": "4.3.0",
    "graphql": "16.6.0"
  },
  "devDependencies": {
    "@types/jest": "29.0.3",
    "@types/node": "18.11.15",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "eslint": "8.29.0",
    "jest": "29.0.3",
    "nodemon": "2.0.20",
    "prettier": "^2.8.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "globals": {
      "ts-jest": {
        "testRegext": "/__tests__/.*.test.ts",
        "verbose": true
      }
    }
  }
}
