{
  "name": "account",
  "version": "1.0.0",
  "description": "Account subgraph",
  "main": "main.js",
  "scripts": {
    "format": "prettier --config .prettierrc --ignore-path ./.gitignore \"**/*.ts\" --write",
    "lint": "eslint . --ext .ts",
    "codegen": "graphql-codegen",
    "postinstall": "npm run build",
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/main.js",
    "build": "swc src -d dist",
    "start": "node --require dotenv/config dist/main.js",
    "clean": "rm -rf dist",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  },
  "dependencies": {
    "@apollo/server": "4.3.0",
    "@apollo/subgraph": "2.2.2",
    "@tsconfig/node16": "^1.0.3",
    "dotenv": "^16.0.3",
    "graphql": "16.6.0",
    "graphql-tag": "2.12.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.16.1",
    "@graphql-codegen/typescript": "2.8.5",
    "@graphql-codegen/typescript-resolvers": "2.7.10",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.23",
    "@types/jest": "29.0.3",
    "@types/node": "18.11.15",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "chokidar": "^3.5.3",
    "concurrently": "^7.6.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "jest": "29.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "globals": {
      "ts-jest": {
        "testRegext": "/__tests__/.*.test.ts",
        "verbose": true
      }
    }
  }
}
